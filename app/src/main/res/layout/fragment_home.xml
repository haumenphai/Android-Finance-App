<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout_over_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFBDD"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_amount_available_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/total_money"
            android:textColor="@color/color_black_2"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_total_money_in_banks_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_amount_available_lable"
            android:text="@string/total_money_in_banks1"
            android:textColor="@color/color_black_2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_total_money_in_banks_value"
            android:layout_width="match_parent"
            android:gravity="end"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@id/tv_total_money_in_banks_lable"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_amount_available_value"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="50.000.000  vnd"
            android:textColor="@color/color_black_2"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_total_cash_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_total_money_in_banks_lable"
            android:text="@string/total_cash1"
            android:textColor="@color/color_black_2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_total_cash_value"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/tv_total_cash_lable"
            android:paddingLeft="10dp"
            android:gravity="end"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_total_money_in_banks_value"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="50.000.000  vnd"
            android:textColor="@color/color_black_2"
            android:textSize="14sp" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@id/tv_total_cash_value"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/color_black_2" />

        <TextView
            android:id="@+id/tv_amount_available_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_amount_available_lable"
            android:gravity="end"
            android:textColor="@color/color_black_2"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="100.000.000 đ" />

        <TextView
            android:id="@+id/tv_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:text="Filter: All"
            android:textColor="@color/gray"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_total_money_out_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_filter"
            android:text="@string/total_money_out"
            android:textColor="@color/color_black_2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_total_money_in_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_total_money_out_lable"
            android:gravity="center"
            android:text="@string/total_money_in"
            android:textColor="@color/color_black_2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_total_money_out_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_filter"
            android:layout_toEndOf="@id/tv_total_money_out_lable"
            android:textColor="@color/color_black_2"
            android:gravity="end"
            android:textSize="14sp"
            tools:text="50.000.000 đ" />

        <TextView
            android:id="@+id/tv_total_money_in_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_total_money_out_value"
            android:layout_toEndOf="@id/tv_total_money_out_lable"
            android:gravity="end"
            android:textColor="@color/color_black_2"
            android:textSize="14sp"
            tools:text="70.000.000 đ" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_filter"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/layout_over_view"
        android:background="#EAEAEA">

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_filter"
        android:layout_above="@id/layout_action_money_io"
        tools:listitem="@layout/item_money_in_out" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_money_io"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:fabCustomSize="45dp"
        app:maxImageSize="25dp"
        android:contentDescription="@string/add_money_in_out" />

    <include
        android:id="@+id/layout_action_money_io"
        layout="@layout/layout_action_list_file_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        />


</RelativeLayout>
