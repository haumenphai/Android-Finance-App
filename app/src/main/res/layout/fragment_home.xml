<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_over_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFBDD"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_amount_available_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/total_money"
            android:textColor="@color/color_black_2"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_total_money_in_banks_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_amount_available_lable"
            android:text="@string/total_money_in_banks1"
            android:textColor="@color/color_black_2"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_amount_available_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_amount_available_lable"
            android:gravity="end"
            android:textColor="@color/color_black_2"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="100.000.000 Ä‘" />

        <TextView
            android:id="@+id/tv_total_money_in_banks_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_amount_available_value"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/tv_total_money_in_banks_lable"
            android:gravity="end"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:text="50.000.000  vnd"
            android:textColor="@color/color_black_2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_total_cash_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_total_money_in_banks_lable"
            android:text="@string/total_cash1"
            android:textColor="@color/color_black_2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_total_cash_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_total_money_in_banks_value"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/tv_total_cash_lable"
            android:gravity="end"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:text="50.000.000  vnd"
            android:textColor="@color/color_black_2"
            android:textSize="14sp" />


        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@id/tv_total_cash_value"
            android:layout_marginTop="5dp"
            android:background="@color/color_black_2" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_filter"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/layout_over_view"
        android:background="#B3DDBF">

        <TextView
            android:id="@+id/tv_filter"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:text="@string/filter" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_filter_money_io"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/tv_filter"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            tools:listitem="@layout/item_filter_money_io_small" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_filter_group"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/layout_filter"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_records_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="1000" />

        <TextView
            android:id="@+id/tv_records_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@id/tv_records_count"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="100-200 / " />


        <TextView
            android:id="@+id/tv_total_money_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Total money in: 100.000 d"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_total_money_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_total_money_in"
            android:layout_marginLeft="5dp"
            android:text="Total money out: 100.100.000.000.000 d"
            android:textSize="12sp" />


        <LinearLayout
            android:id="@+id/layout_button_arr"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_records_count"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/img_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rippler_white_blue"
                android:src="@drawable/ic_arr_left"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/img_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rippler_white_blue"
                android:src="@drawable/ic_arr_right"
                app:tint="@color/black" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_records_count"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/layout_button_arr">

            <ImageView
                android:id="@+id/img_filter"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/rippler_white_blue"
                android:src="@drawable/ic_filter" />

            <ImageView
                android:id="@+id/img_search"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/img_filter"
                android:background="@drawable/rippler_white_blue"
                android:src="@drawable/ic_search" />

            <ImageView
                android:id="@+id/img_sort"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/img_search"
                android:background="@drawable/rippler_white_blue"
                android:src="@drawable/ic_sort" />


            <ImageView
                android:id="@+id/img_report"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/img_sort"
                android:background="@drawable/rippler_white_blue"
                android:src="@drawable/ic_info2"
                app:tint="#888888" />

        </RelativeLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_action_money_io"
        android:layout_below="@id/layout_filter_group"
        tools:listitem="@layout/item_money_in_out"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_money_io"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:contentDescription="@string/add_money_in_out"
        android:src="@drawable/ic_add"
        app:fabCustomSize="45dp"
        app:maxImageSize="25dp"
        android:backgroundTint="#FFFDD2"
        />

    <include
        android:id="@+id/layout_action_money_io"
        layout="@layout/layout_action_list_file_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />


</RelativeLayout>
