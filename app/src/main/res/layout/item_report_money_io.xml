<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:text="@string/yesterday"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_total_money_in_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"

        android:layout_marginLeft="5dp"
        android:text="@string/total_money_in"
        android:textColor="@color/color_black_2"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_total_money_in_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tv_total_money_in_label"
        android:text="100.000 d"
        android:textColor="@color/color_black_2"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_total_money_out_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_total_money_in_value"
        android:layout_marginLeft="5dp"
        android:text="@string/total_money_out"
        android:textColor="@color/color_black_2"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_total_money_out_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_total_money_in_value"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tv_total_money_out_label"
        android:text="100.000 d"
        android:textColor="@color/color_black_2"
        android:textSize="14sp" />



    <RelativeLayout
        android:id="@+id/layout_more_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_total_money_out_value"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/tv_cash_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cash1"
            android:textColor="@color/color_black_2"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_cash_in_total_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_cash_total"
            android:text="+100.000 d"
            android:textColor="@color/color_black_2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_cash_out_total_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cash_in_total_value"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_cash_total"
            android:text="-100.000 d"
            android:textColor="@color/color_black_2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_money_in_bank_total_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cash_out_total_value"
            android:text="@string/money_in_bank1"
            android:textColor="@color/color_black_2"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_money_in_bank_total_value_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cash_out_total_value"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_money_in_bank_total_lable"
            android:text="+100.000 d"
            android:textColor="@color/color_black_2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_money_in_bank_total_value_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_money_in_bank_total_value_in"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_money_in_bank_total_lable"
            android:text="-100.000 d"
            android:textColor="@color/color_black_2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_money_in_times_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_money_in_bank_total_value_out"
            android:text="@string/money_in1"
            android:textColor="@color/color_black_2"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_money_in_times_count_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_money_in_bank_total_value_out"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_money_in_times_count"
            android:text="12"
            android:textColor="@color/color_black_2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_money_out_times_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_money_in_times_count"
            android:text="@string/money_out1"
            android:textColor="@color/color_black_2"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_money_out_times_count_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_money_in_times_count_value"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_money_out_times_count"
            android:text="20"
            android:textColor="@color/color_black_2"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_below="@id/layout_more_detail"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@color/color_black_2" />
</RelativeLayout>
