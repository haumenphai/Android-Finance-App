<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_item_money_out">

    <TextView
        android:id="@+id/tv_sequence"
        android:layout_width="wrap_content"
        android:minWidth="30dp"
        android:layout_height="50dp"
        android:background="#B4C6C5"
        android:gravity="center"
        android:text="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        />
    <View
        android:id="@+id/line1"
        android:layout_width="0.5dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/tv_sequence"
        android:background="@color/black" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/tv_sequence"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="name: " />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_sequence"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="amount: " />

    <ImageView
        android:id="@+id/img_ischecked"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_check" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_below="@id/img_ischecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:layout_marginRight="2dp"
        android:text="2022-12-12 20:20"
        android:layout_alignParentRight="true"
    />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_time"
        android:layout_marginTop="2dp"
        android:background="@color/color_black_2" />

</RelativeLayout>