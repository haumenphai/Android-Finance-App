<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F0D9">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_total_money_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/total_money"
                android:textColor="@color/color_black_2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_total_money_value"
                android:layout_width="match_parent"
                android:layout_toEndOf="@id/tv_total_money_label"
                android:paddingStart="10dp"
                android:maxLines="1"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                tools:text="100.000.000 vnd"
                android:textColor="@color/color_black_2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_total_money_in_banks_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_total_money_label"
                android:layout_marginStart="5dp"
                android:text="@string/total_money_in_banks1"
                android:textColor="@color/color_black_2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_total_money_in_banks_value"
                android:layout_width="match_parent"
                android:gravity="end"
                android:paddingStart="10dp"
                android:layout_toEndOf="@id/tv_total_money_in_banks_lable"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_total_money_label"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                tools:text="50.000.000  vnd"
                android:textColor="@color/color_black_2"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_total_cash_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_total_money_in_banks_lable"
                android:layout_marginStart="5dp"
                android:text="@string/total_cash1"
                android:textColor="@color/color_black_2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_total_cash_value"
                android:layout_width="match_parent"
                android:layout_toEndOf="@id/tv_total_cash_lable"
                android:paddingStart="10dp"
                android:gravity="end"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_total_money_in_banks_value"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                tools:text="50.000.000  vnd"
                android:textColor="@color/color_black_2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_money_unit_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_total_cash_lable"
                android:layout_marginStart="5dp"
                android:text="@string/money_unit1"
                android:textColor="@color/color_black_2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_money_unit_value"
                android:layout_width="50dp"
                android:maxWidth="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_total_cash_value"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:background="@drawable/bg_border"
                android:gravity="center"
                android:padding="2dp"
                tools:text="vnd"
                android:textColor="@color/color_black_2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_money_format_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_money_unit_lable"
                android:layout_marginStart="5dp"
                android:text="@string/money_format1"
                android:textColor="@color/color_black_2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_money_format_value"
                android:layout_width="wrap_content"
                android:maxWidth="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_money_unit_value"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                tools:text="."
                android:textColor="@color/color_black_2"
                android:textSize="15sp"
                android:textStyle="bold" />


            <RelativeLayout
                android:id="@+id/layout_button_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_money_format_lable"
                android:layout_marginTop="10dp"
                android:padding="5dp">

                <Button
                    android:id="@+id/btn_set_total_money_in_banks"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_button_1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/set_total_money_in_banks"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_set_total_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_below="@id/btn_set_total_money_in_banks"
                    android:background="@drawable/bg_button_1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/set_total_cash"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_set_money_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_below="@id/btn_set_total_cash"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_button_1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/_3_set_money_unit"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn_set_money_format"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_below="@id/btn_set_total_money_in_banks"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/btn_set_total_cash"
                    android:background="@drawable/bg_button_1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/_4_set_money_format"
                    android:textAllCaps="false" />


                <Button
                    android:id="@+id/btn_view_history"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_below="@id/btn_set_money_unit"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_button_1"
                    android:text="@string/history1"
                    android:textAllCaps="false" />

            </RelativeLayout>


            <View
                android:id="@+id/line0"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_below="@id/layout_button_1"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:background="@color/color_black_2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_currency"
                android:layout_below="@id/line0"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/tv_currecy"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:text="@string/currecy1"
                    android:textColor="@color/color_black_2"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_add_currecy"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/tv_currecy"
                    android:background="@drawable/bg_button_1"
                    android:text="@string/add_currency" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_currecy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_currecy"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_currecy" />

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_below="@id/recycler_view_currecy"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/color_black_2" />
            </RelativeLayout>




            <TextView
                android:id="@+id/tv_money_type"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/layout_currency"
                android:padding="10dp"
                android:text="@string/money_type1"
                android:textColor="@color/color_black_2"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_add_money_type"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_below="@id/layout_currency"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/tv_money_type"
                android:background="@drawable/bg_button_1"
                android:text="@string/add_money_type" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_money_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_money_type"
                tools:itemCount="3"
                tools:listitem="@layout/item_money_type" />


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
