<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bg_item"
    android:background="@drawable/rippler_yellow">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="#1"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/tv_sequence"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/tv_name"
        tools:text="Sales money"
        android:layout_toEndOf="@id/tv_sequence"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="10dp"
        android:textColor="@color/color_black_2"
        />

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_cancel_2"
        app:tint="#6E6E6E"
        android:layout_alignParentEnd="true"
        android:padding="4dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/color_black_2"
        android:layout_below="@id/tv_sequence"
        />

</RelativeLayout>

