<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bg_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:translationZ="100dp">

    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@color/black" />

    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/bg_dialog">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="@string/add_money_in_out"
            android:textColor="@color/color_black_2"
            android:textSize="20sp" />

        <View
            android:id="@+id/line_1"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@id/tv_title"
            android:background="@color/color_black_2" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btn_save"
            android:layout_below="@id/line_1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <RelativeLayout
                    android:id="@+id/layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/edit_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_edit1"
                        android:hint="@string/name"
                        android:inputType="textNoSuggestions"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_amount_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_below="@id/edit_name"
                        android:text="@string/amount1"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/color_black_2"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_amonut_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/tv_amount_lable"
                        android:layout_below="@id/edit_name"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="100.000.000 d"
                        />

                    <EditText
                        android:id="@+id/edit_amonut"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@id/tv_amount_lable"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_edit1"
                        android:hint="@string/amount1"
                        android:inputType="numberDecimal"
                        android:maxLength="18"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_money_type"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_below="@id/edit_amonut"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/money_type1"
                        android:textColor="@color/color_black_2"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/img_money_type"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_below="@id/edit_amonut"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@id/tv_money_type"
                        android:background="@color/green_500" />

                    <TextView
                        android:id="@+id/tv_currecy_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_below="@id/edit_amonut"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@id/img_money_type"
                        android:gravity="center"
                        android:text="@string/currecy1"
                        android:textColor="@color/color_black_2"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_currecy_value"
                        android:layout_width="400dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/edit_amonut"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@id/tv_currecy_lable"
                        android:background="@drawable/bg_border"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:paddingStart="3dp"
                        android:paddingEnd="20dp"
                        tools:text="Cash"
                        android:textColor="@color/color_black_2"
                        />

                    <ImageView
                        android:id="@+id/img_pick_currecy_value"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/edit_amonut"
                        android:layout_marginStart="-20dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@id/tv_currecy_value"
                        android:src="@drawable/ic_arrow_dow" />


                    <RadioGroup
                        android:id="@+id/radio_gr_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_money_type">

                        <RadioButton
                            android:id="@+id/radio_type_money_in"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/money_in" />

                        <RadioButton
                            android:id="@+id/radio_type_money_out"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/money_out" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/tv_type_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_below="@id/radio_gr_type"
                        android:gravity="center"
                        android:text="@string/type1"
                        android:textColor="@color/color_black_2"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_type_lable"
                        tools:itemCount="2"
                        tools:listitem="@layout/item_money_type_in_dialog_create_money_io" />

                    <Button
                        android:id="@+id/btn_add_type"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/recycler_view"
                        android:background="@drawable/bg_button_1"
                        android:text="@string/add_type"
                        android:textAllCaps="false" />


                </RelativeLayout>


                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_below="@id/layout_1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/color_black_2" />

                <RelativeLayout
                    android:id="@+id/layout_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/layout_1"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:id="@+id/tv_time_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="@string/time1"
                        android:textColor="@color/color_black_2"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_time_value"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/tv_time_lable"
                        android:gravity="center"
                        tools:text="2022-12-20 20:20"
                        android:layout_marginTop="5dp"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btn_choose_time"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_toStartOf="@id/img_delete_time"
                        android:background="@drawable/bg_button_1"
                        android:text="@string/choose"
                        android:layout_marginTop="5dp"
                        android:textAllCaps="false" />

                    <ImageView
                        android:id="@+id/img_delete_time"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_delete"
                        android:layout_alignParentEnd="true"
                        app:tint="#8A8A8A"
                        android:background="@drawable/rippler_white_blue"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginTop="2dp"
                        />

                    <EditText
                        android:id="@+id/edit_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_time_value"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_edit1"
                        android:gravity="start"
                        android:hint="@string/description1"
                        android:inputType="textNoSuggestions|textMultiLine"
                        android:maxHeight="100dp"
                        android:textSize="15sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        />

                    <CheckBox
                        android:id="@+id/checkbox_compute_into_the_total_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/edit_desc"
                        android:checked="true"
                        android:layout_marginStart="-2dp"
                        android:text="@string/caclculate_into_the_total_amonut" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/edit_desc"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@id/checkbox_compute_into_the_total_money"
                        android:padding="5dp"
                        android:src="@drawable/ic_info2" />
                </RelativeLayout>

            </RelativeLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:background="@drawable/bg_button_1"
            android:text="@string/save"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@id/btn_save"
            android:background="@drawable/bg_button_1"
            android:text="@string/cancel"
            android:textAllCaps="false" />
    </RelativeLayout>

</RelativeLayout>
